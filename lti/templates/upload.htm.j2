{% extends "base.htm.j2" %}

{% block content %}

<section id="panel-upload">
    <h1 class="text-white">Upload Your Document</h1>
    <p>Click "Choose File" below, select your image file, and click "Submit".</p>
    <div class="mb-3 container">
        <form id="upload-form" action="{{ url_for('uploader') }}" method="post" enctype="multipart/form-data">
            <input type="hidden" name="MAX_FILE_SIZE" class="form-control" value="<?= $max_filesize ?>"/>
            <label id="userfile-label" for="userfile" class="form-label">Select File:</label> 
            <input type="file" class="form-control" name="userfile" id="userfile" accept=".png,.jpg"/>
            <button id="btn-filesubmit" class="btn btn-primary" type="submit" value="Upload" onclick=showLoad()>Upload</button>
        </form>

        <form action="back" method="post">
            <button class="btn btn-outline-primary" type="submit">&#60; Back</button>
        </form>
    </div>
</section>

{% endblock %}